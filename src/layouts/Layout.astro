---
interface Props {
  title: string
}

const { title } = Astro.props
import { ViewTransitions } from "astro:transitions"
import Header from "../components/Header.astro"
import Services from "../components/Services.astro"
import Solutions from "../components/Solutions.astro"
import Customers from "../components/Customers.astro"
import Footer from "../components/Footer.astro"
import FloatingButton from "../components/FloatingButton.astro"
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Ofrecemos servicios de desarrollo de aplicaciones personalizadas para satisfacer las necesidades de tu empresa. Contacta con nosotros para soluciones innovadoras y eficientes.'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='./favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:title' content={title} />
    <meta
      property='og:description'
      content='Ofrecemos servicios de desarrollo de aplicaciones personalizadas para satisfacer las necesidades de tu empresa. Contacta con nosotros para soluciones innovadoras y eficientes.'
    />
    <meta
      property='og:image'
      content='https://www.logicalsistemas.com/assets/img/logo.png'
    />
    <meta property='og:url' content='https://www.logicalsistemas.com/' />
    <title>{title}</title>
    <!-- Google tag (gtag.js) -->
    <script
      type='text/partytow'
      async
      src='https://www.googletagmanager.com/gtag/js?id=AW-11436068079'></script>
    <script type='text/partytow'>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag("js", new Date())
      gtag("config", "AW-11436068079")
    </script>
    <ViewTransitions />
  </head>
  <body class='container mx-auto bg-transparent dark:bg-black'>
    <Header />
    <main>
      <Services transition:name='hero' />
      <Solutions />
      <Customers />
      <FloatingButton />
    </main>
    <Footer />
    <script>
      window.document.addEventListener("DOMContentLoaded", function () {
        const links = window.document.querySelectorAll('a[href^="#"]')

        links.forEach((link) => {
          link.addEventListener("click", function (e) {
            e.preventDefault()

            const targetId = (e.target as HTMLAnchorElement).hash.substring(1)
            const targetElement = window.document.getElementById(targetId)

            if (targetElement) {
              const offsetTop = targetElement.offsetTop

              window.scrollTo({
                top: offsetTop,
                behavior: "smooth",
              })
            }
          })
        })
      })
    </script>
  </body>
</html>
