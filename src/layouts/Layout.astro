---
interface Props {
  title: string
}

const { title } = Astro.props
import { ViewTransitions } from "astro:transitions"
import Header from "../components/Header.astro"
import Services from "../components/Services.astro"
import Solutions from "../components/Solutions.astro"
import Customers from "../components/Customers.astro"
import Footer from "../components/Footer.astro"
import FloatingButton from "../components/FloatingButton.astro"
import "@fontsource-variable/onest"
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Ofrecemos servicios de desarrollo de aplicaciones personalizadas para satisfacer las necesidades de tu empresa. Contacta con nosotros para soluciones innovadoras y eficientes.'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='./favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:title' content={title} />
    <meta
      property='og:description'
      content='Ofrecemos servicios de desarrollo de aplicaciones personalizadas para satisfacer las necesidades de tu empresa. Contacta con nosotros para soluciones innovadoras y eficientes.'
    />
    <meta
      property='og:image'
      content='https://www.logicalsistemas.com/assets/img/logo.png'
    />
    <meta property='og:url' content='https://www.logicalsistemas.com/' />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class='container mx-auto bg-transparent dark:bg-black'>
    <Header />
    <main>
      <Services transition:name='hero' />
      <Solutions />
      <Customers />
      <FloatingButton />
    </main>
    <Footer />
    <style>
      :root {
        color-scheme: light dark;
      }

      html {
        scroll-behavior: smooth;
        font-family: "Onest Variable", Arial;
      }
    </style>
  </body>
</html>
